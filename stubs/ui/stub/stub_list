                                     filter: viewModel.filter,
                                     stub: stub,
                                     onTap: () =>
                                         viewModel.onStubTap(context, stub),
                                     onEntityAction: (EntityAction action) {
                                       if (action == EntityAction.more) {
                                         showDialog();
                                       } else {
                                         viewModel.onEntityAction(
                                             context, stub, action);
                                       }
                                     },
                                     onLongPress: () =>
                                         showDialog(),
                                   );
                                },
                              ),
                      ),
              ),

      
